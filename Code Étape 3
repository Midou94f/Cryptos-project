crypto_questions <- read.xlsx(crypto_questions_path)

##############################################################
###################### Fonction mise √† jour du profil##############@
##########################################################


mettre_a_jour_profil <- function(profil_recap, user_index, new_score) {
  profil_recap$animal_score[user_index] <- new_score
  return(profil_recap)
}


