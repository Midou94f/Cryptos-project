############### LIVRE CRYPTO


# Définition des styles
question_style <- blue$bold
info_style <- white$italic
warning_style <- red$bold
success_style <- green$bold
highlight_style <- yellow$bold
info_secondary_style <- cyan$italic
error_style <- red$bold$underline
section_title_style <- magenta$bold$underline



details <- list(
  "1a" = paste0(
    section_title_style("\nChapitre 1 : Introduction : Les bases des cryptomonnaies\n"),
    highlight_style("Sous-section (A) : Qu'est-ce qu'une cryptomonnaie ?\n\n"),
    
    info_secondary_style("• Définition :\n\n"),
    
    info_style("Une "), highlight_style("cryptomonnaie"), info_style(" est une monnaie numérique ou virtuelle qui utilise la cryptographie pour sécuriser les transactions. Elle fonctionne de manière décentralisée, souvent via une technologie appelée \n\n "), highlight_style("blockchain"), info_style(".\n\n"),
    
    info_secondary_style("• Origine :\n\n"),
    
    info_style("Contrairement aux monnaies traditionnelles ("), highlight_style("dollars, euros"), info_style("), les cryptomonnaies ne sont pas émises ou contrôlées par une autorité centrale comme une banque centrale. Elles sont créées et gérées par un réseau décentralisé de participants.\n\n"),
    
    info_secondary_style("• Différences avec les monnaies traditionnelles :\n\n"),
    
    info_style("1. "), highlight_style("Centralisation vs Décentralisation"), info_style(": Les monnaies fiduciaires (ex : euro) sont émises et gérées par des banques centrales, tandis que les cryptomonnaies sont décentralisées.\n"),
    info_style("2. "), highlight_style("Physique vs Numérique"), info_style(": Les cryptos existent uniquement sous forme numérique.\n"),
    info_style("3. "), highlight_style("Transparence"), info_style(": Les transactions en cryptos sont visibles publiquement sur la blockchain, contrairement aux transactions bancaires.\n"),
    info_style("4. "), highlight_style("Contrôle de l'offre"), info_style(": Le Bitcoin, par exemple, a une limite fixe (21 millions de BTC), alors que les banques centrales peuvent imprimer davantage de monnaie.\n\n"),
    
    info_secondary_style("• Caractéristiques principales :\n\n"),
    
    info_style("1. "), highlight_style("Décentralisation"), info_style(": Les cryptomonnaies fonctionnent sur un réseau distribué, où aucune entité unique ne contrôle l’ensemble des données.\n"),
    info_style("2. "), highlight_style("Transparence"), info_style(": Toutes les transactions sont enregistrées publiquement sur une blockchain accessible à tous.\n"),
    info_style("3. "), highlight_style("Immutabilité"), info_style(": Une fois enregistrées dans la blockchain, les transactions ne peuvent pas être modifiées ou supprimées.\n"),
    info_style("4. "), highlight_style("Sécurité"), info_style(": La cryptographie protège les données et empêche les fraudes.\n")
  ),
  
