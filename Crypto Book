    info_style("  "), highlight_style("Facteurs influençant les frais"), info_style(":\n"),
    info_style("    - Complexité de la transaction.\n"),
    info_style("    - Congestion du réseau.\n"),
    info_style("    - Vitesse de traitement souhaitée (frais plus élevés pour une validation rapide).\n")
